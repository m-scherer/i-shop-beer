
<div class="row">
  <div class="col-sm-4">
    <div class="panel panel-default" id="panel_width">
      <div class="panel-heading text-center"><%= link_to @beer.name, beer_path(@beer) %> </div>
      <div class="panel-body text-center">
        <%= image_tag(@beer.image, :height => '180', :width => '240') %><br>
        <%= number_to_currency(@beer.price) %><br>
        <%= @beer.description %>
        <%= button_to "Add to Cart", cart_path(beer_id: @beer.id), class: "btn btn-primary" %>
      </div>
    </div>
  </div>
</div>
