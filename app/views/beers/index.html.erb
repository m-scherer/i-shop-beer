<div class="special-header-font"<h1>All Beers</h1></div>
<div class="row">
  <% @beers.each do |beer| %>
    <div class="col-sm-3">
      <div class="panel panel-default" id="panel_width">
        <div class="panel-heading text-center panel-head"><%= link_to beer.name, beer_path(beer) %> </div>
        <div class="panel-body text-center">
          <%= image_tag(beer.image, :height => '180', :width => '240') %><br>
          <strong><%= number_to_currency(beer.price) %></strong><br>
          <%= beer.description %><br>
          <%= button_to "Add to Cart", cart_path(beer_id: beer.id), class: "btn btn-primary" %>
        </div>
      </div>
    </div>
  <% end %>
</div>
